#!/bin/bash
date;
if [[ $1 = 'break' ]]; then
    echo 'break'
    sleep 180
    say -v Deranged 'Go to work bitch!'
    terminal-notifier -message "Go to work bitch!"
else
    echo 'pomodoro'
    sleep 1500
    say -v Deranged 'Take a rest, bro'
    terminal-notifier -message "Take a rest bro"
fi
date;

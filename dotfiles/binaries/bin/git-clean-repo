#!/bin/bash

main(){
    reset_branch
    remove_all_branches_besides_current
    remove_all_stashes
    remove_all_uncheked_files
}

reset_branch(){
    git reset --hard
}

remove_all_branches_besides_current(){
    git branch -D $(git branch | grep -v \* | xargs)
}

remove_all_stashes(){
    git stash clear
}

remove_all_uncheked_files(){
    git clean -d -f
}

main

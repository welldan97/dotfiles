#!/bin/bash

main() {
  reset-branch
  remove-all-branches-besides-current
  remove-all-stashes
  remove-all-uncheked-files
}

reset-branch() {
  git reset --hard
}

remove-all-branches-besides-current() {
  git branch -D $(git branch | grep -v \* | xargs)
}

remove-all-stashes() {
  git stash clear
}

remove-all-uncheked-files() {
  git clean -d -f
}

main

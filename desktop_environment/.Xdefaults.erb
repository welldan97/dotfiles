! Fonts
URxvt.font: xft:Ubuntu\ Mono:size=13

! Scrollbar
URxvt.scrollBar_right: true
URxvt.scrollstyle:plain

! Perl extensions
URxvt.perl-lib: <%= @destination %>/.urxvt-perls/
URxvt.perl-ext-common: default,matcher,tabbed,clipboard

URxvt.matcher.button: 1
URxvt.urlLauncher: x-www-browser

URxvt.clipboard.copycmd: xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

URxvt.keysym.M-C-w: perl:clipboard:copy
URxvt.keysym.M-C-y: perl:clipboard:paste

URxvt.cursorBlink: true

! Colours
URxvt.background: #ffffff
URxvt.foreground: #000000

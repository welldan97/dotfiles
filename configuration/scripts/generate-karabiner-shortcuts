#!/usr/bin/env coffee

class KarbinerBuilder
  @virtualKey: (k) ->
    """
      <vkopenurldef>
        <name>KeyCode::VK_OPEN_URL_SHELL_#{k}</name>
        <url type="shell">
          <![CDATA[ /Users/welldan97/bin/keyboard-shortcut '#{k}' ]]>
        </url>
      </vkopenurldef>
    """

  @autogen: (k) ->
    """
      <autogen>
        __KeyToKey__
        KeyCode::#{k},
        MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND |
        ModifierFlag::FN,
        KeyCode::VK_OPEN_URL_SHELL_#{k}
      </autogen>
    """

  @build: (keys) ->
    virtualKeys = keys
      .map (k) => @virtualKey(k)
      .join('')

    autogens = keys
      .map (k) => @autogen(k)
      .join('')

    """
      <?xml version="1.0"?>
      <root>
        #{virtualKeys}

        <item>
          <name>Shell Keyboard Shortcut</name>
          <identifier>private.shell_keyboard_shortcuts</identifier>
          #{autogens}
        </item>
      </root>
    """

main = ->
  console.log KarbinerBuilder.build KEYS

KEYS = [
